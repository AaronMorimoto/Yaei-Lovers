<h2>投稿一覧</h2>
<table class='table table-hover table-inverse bg-light'>
  <thead>
    <tr>
      <th>画像</th>
      <th>野営地名</th>
      <th>説明</th>
      <th>評価</th>
      <th>お気に入り</th>
      <th>コメント数</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to admin_post_path(post) do %>
            <% post.images.each do |image| %>
              <%= image_tag(image, size:'50x50') %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to post.name, admin_post_path(post), class: "post_#{post.id}" %></td>
        <td class="comment-box"><%= post.body %></td>
        <td><%= render "public/posts/static_rate", post: post %></td>
        <td class=<%= "favorite-" + post.id.to_s %> >
            <%= render "public/favorites/btn", post: post %>
        </td>
        <td><%= render "public/post_comments/counter", post: post %></td>
      </tr>
    <% end %>
      <tr align="center">
        <td colspan="7" class='text-light'><%= paginate posts %></td>
      </tr>
  </tbody>
</table>