<div class="row">
  <div class="offset-1 text-center">
    <h2 class="text-center px-3 py-3">
      <strong><%= user.name %>さんの会員詳細</strong>
    </h2>
  </div>
</div>

<h3>
  登録情報
</h3>
<table class='table table-hover table-inverse bg-light'>
  <thead>
    <tr>
      <th>
      	<strong>ID</strong>
      </th>
      <th><%= user.id %></th>
    </tr>
    <tr>
      <th>
      	<strong>ユーザー画像</strong>
      </th>
      <th><%= image_tag user.get_profile_image, size:'100x100' %></th>
    </tr>
    <tr>
      <th>
      	<strong>ユーザーネーム</strong>
      </th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>
      	<strong>メールアドレス</strong>
      </th>
      <th><%= user.email %></th>
    </tr>
    <tr>
      <th>
      	<strong>ステータス</strong>
      </th>
      <th>
        <% if user.status === false %>
          <strong class="text-success">有効</strong>
        <% else %>
          <strong class="text-danger">退会済み</strong>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  	<tr>
  	  <% if admin_signed_in? %>
  	    <td><%= link_to "編集", edit_admin_user_path(user), class: "btn btn-success" %></td>
  	  <% end %>
  	</tr>
  </tbody>
</table>