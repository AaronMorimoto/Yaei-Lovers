<table class='table table-hover table-inverse bg-light'>
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザー画像</th>
      <th>ユーザーネーム</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.status === false %>
            <strong class="text-success">有効</strong>
          <% else %>
            <strong class="text-danger">退会済み</strong>
          <% end %>
        </td>
        <td><%= link_to "詳細ページへ", admin_user_path(user), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
      <tr align="center">
        <td colspan="7" class='text-light'><%= paginate users %></td>
      </tr>
  </tbody>
</table>