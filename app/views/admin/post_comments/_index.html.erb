<table>
  <tbody>
      <% post.post_comments.each do |post_comment| %>
      <tr>
        <td>
          <%= link_to admin_user_path(post_comment.user) do %>
            <%= image_tag post_comment.user.get_profile_image, size: "50x50" %><br>
            <%= post_comment.user.name %>
          <% end %>
        </td>
        <td>
          <% post_comment.images.each do |image| %>
            <%= image_tag(image, size:'100x100') %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td>
          <% if admin_signed_in? %>
            <%= link_to "Destroy", admin_post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>