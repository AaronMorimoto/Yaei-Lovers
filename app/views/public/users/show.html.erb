<div class="container">
  <div class="row">
    <h4>
      マイページ
    </h4>
  </div>
  <div class="row">
    <div class="col">
      <h3>
        登録情報
        <%= link_to "編集する", edit_information_path, class: "btn btn-success" %>
        <%= link_to "お気に入り一覧", user_favorites_path, class: "btn btn-primary" %>
      </h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>ニックネーム</th>
            <th>メールアドレス</th>
            <th>登録日</th>
            <th>更新日</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image, size:'100x100' %></td>
            <td><%= @user.name%></td>
            <td><%= @user.email%></td>
            <td><%= @user.created_at%></td>
            <td><%= @user.updated_at%></td>
    　　    </tr>
        </tbody>
      </table>
      
      <h3>
        <%= @user.name%>さんの投稿一覧
      </h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>野営地名</th>
            <th>説明。コメント</th>
            <th>評価</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <% post.images.each do |image| %>
                  <%= image_tag(image, size:'50x50') %>
                <% end %>
              </td>
              <td><%= link_to post.name, post, class: "post_#{post.id}" %></td>
              <td><%= post.body %></td>
              <td><%= render "public/posts/static_rate", post: post %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>