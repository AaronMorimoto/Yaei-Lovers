<div class="container">
  <div class="row">
    <h4>
      マイページ
    </h4>
  </div>
  <div class="row">
    <div class="col">
      <h3>
        登録情報
        <%= link_to "編集する", edit_information_path, class: "btn btn-success" %>
        <%= link_to "お気に入り一覧", user_favorites_path, class: "btn btn-primary" %>
      </h3>
      <table>
        <thead>
          <th></th>
          <th></th>
          <th></th>
       　  <th></th>
       　  <th></th>
        </thead>
        <tbody>
          <tr>
            <tb><%= image_tag @user.get_profile_image, size:'100x100' %></tb>
          </tr>
          <tr>
            <tb>ニックネーム</tb>
            <tb><%= @user.name%></tb>
    　　    </tr>
    　　    <tr>
    　       <tb>メールアドレス</tb>
   　        <tb><%= @user.email%></tb>
          </tr>
          <tr>
    　　      <tb>登録日</tb>
    　　      <tb><%= @user.created_at%></tb>
    　　    </tr>
          <tr>
            <tb>更新日</tb>
    　　      <tb><%= @user.updated_at%></tb>
    　　    </tr>
        </tbody>
      </table>
      
      <h3>
        <%= @user.name%>さんの投稿一覧
      </h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>野営地名</th>
            <th>説明。コメント</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <% post.images.each do |image| %>
                  <%= image_tag(image, width:100) %>
                <% end %>
              </td>
              <td><%= link_to post.name,post, class: "post_#{post.id}" %></td>
              <td><%= post.body %></td>
              <td><%= render "public/posts/static_rate", post: post %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>