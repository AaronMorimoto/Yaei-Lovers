<h3>
  <%= user.name%>さんの投稿一覧
</h3>
<table class='table table-inverse text-light'>
  <thead>
    <tr>
      <th></th>
      <th>野営地名</th>
      <th>説明・コメント</th>
      <th>評価</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <% post.images.each do |image| %>
            <%= image_tag(image, size:'50x50') %>
          <% end %>
        </td>
        <td><%= link_to post.name, post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td><%= render "public/posts/static_rate", post: post %></td>
      </tr>
    <% end %>
  </tbody>
</table>